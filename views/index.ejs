<%- include('layout/header') %>
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 20px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 style="text-align: center; color: #333; font-size: 2rem; margin-top: -20px; margin-left: -20px;">
                    Employee Details</h1>

                <!-- Table starts here -->
                <table
                    style="width: 80%; border-collapse: collapse; margin: 10px auto; background-color: #fff; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px; font-family: 'Verdana', sans-serif;">
                    <thead style="background-color: #007bff; color: #fff;">
                        <tr>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Employee ID</th>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Name</th>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Address</th>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Age</th>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Department</th>
                            <th style="padding: 10px 15px; text-align: left; font-weight: bold;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example data row -->
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 10px 15px; text-align: left;">1</td>
                            <td style="padding: 10px 15px; text-align: left;">John Doe</td>
                            <td style="padding: 10px 15px; text-align: left;">123 Main St</td>
                            <td style="padding: 10px 15px; text-align: left;">30</td>
                            <td style="padding: 10px 15px; text-align: left;">Engineering</td>
                            <td style="padding: 10px 15px; text-align: left;">Full-Time</td>
                        </tr>
                        <!-- More rows can be added here dynamically -->
                    </tbody>
                </table>
                <!-- Table ends here -->

            </div>
        </div>
    </div>

    <footer style="text-align: center; padding: 10px; background-color: #f4f4f4;">
        <p>&copy; 2024 Employee Management System</p>
    </footer>

    <%- include('layout/footer') %>